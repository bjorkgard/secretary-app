{
  "name": "secretary",
  "version": "0.0.5",
  "private": true,
  "description": "An application for the secretary of the congregation",
  "author": {
    "name": "Nathanael Björkgård",
    "email": "nathanael@bjorkgard.se"
  },
  "scripts": {
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build --mac --win --linux --publish never",
    "electron:publish": "vue-cli-service electron:build --mac --publish always",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@headlessui/vue": "^1.7.3",
    "@heroicons/vue": "^2.0.12",
    "autoprefixer": "^10",
    "core-js": "^3.8.3",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "postcss": "^8",
    "tailwindcss": "^3",
    "vue": "^3.2.13",
    "vue-router": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^13.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-align-assignments": "^1.1.2",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-cli-plugin-tailwind": "~3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "plugins": [
      "align-assignments",
      "align-import"
    ],
    "parserOptions": {
      "sourceType": "module",
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "AssignmentExpression": true,
            "ImportDeclaration": true,
            "VariableDeclarator": true
          }
        }
      ],
      "align-import/align-import": "error",
      "key-spacing": [
        "error",
        {
          "mode": "minimum",
          "align": {
            "beforeColon": true,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "align-assignments/align-assignments": [
        2,
        {
          "requiresOnly": false
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "bugs": {
    "url": "https://github.com/bjorkgard/secretary-app/issues"
  },
  "homepage": "https://github.com/bjorkgard/secretary-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/bjorkgard/secretary-app.git"
  },
  "overrides": {
    "vue-cli-plugin-electron-builder": {
      "electron-builder": "^23.0.3"
    }
  }
}
